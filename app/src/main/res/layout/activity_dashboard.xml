<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        tools:context=".ui.activity.DashboardActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:elevation="1dp"
            android:orientation="vertical">

        <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/icon"
                android:layout_marginBottom="36dp"
                android:id="@+id/ivIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                    android:id="@+id/tvFindHelp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_right_fill_red"
                    android:elevation="1dp"
                    android:textStyle="italic"
                    android:textColor="@color/color_white"
                    android:textSize="28sp"
                    android:text="@string/find_helper"/>

        <TextView
                android:id="@+id/tvFindHelpAction"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="24sp"
                android:background="@drawable/rounded_right_bottom_white"
                android:layout_marginRight="80dp"
                android:visibility="invisible"
                android:layout_marginBottom="36dp"
                android:text="@string/find_helper_content"/>


            <TextView
                    android:id="@+id/tvHelper"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="28sp"
                    android:elevation="1dp"
                    android:textStyle="italic"
                    android:background="@drawable/rounded_left_fill_red"
                    android:text="@string/helper"/>


        <TextView
                android:id="@+id/tvHelperAction"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="24sp"
                android:visibility="invisible"
                android:background="@drawable/rounded_left_bottom_white"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="48dp"
                android:text="@string/helper_content"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>